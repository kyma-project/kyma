{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "Schema definition for cluster-users helm chart values",
    "type": "object",
    "properties": {
        "bindings": {
            "description": "Configuration properties for the bindings",
            "type": "object",
            "properties": {
                "kymaEssentials": {
                    "description": "Configuration properties for kyma essentials",
                    "type": "object",
                    "properties": {
                        "groups": {
                            "description": "Specifies the array of groups used in ClusterRoleBinding to the kyma-essentials ClusterRole.",
                            "default": [],
                            "type": "array"
                        }
                    }
                },
                "kymaView": {
                    "description": "Configuration properties for kyma view",
                    "type": "object",
                    "properties": {
                        "groups": {
                            "description": "Specifies the array of groups used in ClusterRoleBinding to the kyma-view ClusterRole.",
                            "default": [],
                            "type": "array"
                        }
                    }
                },
                "kymaEdit": {
                    "description": "Configuration properties for kyma edit",
                    "type": "object",
                    "properties": {
                        "groups": {
                            "description": "Specifies the array of groups used in ClusterRoleBinding to the kyma-edit ClusterRole.",
                            "default": [],
                            "type": "array"
                        }
                    }
                },
                "kymaAdmin": {
                    "description": "Configuration properties for kyma admin",
                    "type": "object",
                    "properties": {
                        "groups": {
                            "description": "Specifies the array of groups used in ClusterRoleBinding to the kyma-admin ClusterRole.",
                            "default": [],
                            "type": "array"
                        }
                    }
                },
                "kymaDeveloper": {
                    "description": "Configuration properties for kyma developer",
                    "type": "object",
                    "properties": {
                        "groups": {
                            "description": "Specifies the array of groups used in ClusterRoleBinding to the kyma-developer ClusterRole.",
                            "default": [],
                            "type": "array"
                        }
                    }
                }
            }
        },
        "users": {
            "description": "Configuration properties for the bindings",
            "type": "object",
            "properties": {
                "adminGroup": {
                    "description": "Specifies the name of the group used in ClusterRoleBinding to the kyma-admin ClusterRole.",
                    "default": "",
                    "type": "string"
                }
            }
        }
    }
}
